
extends ../layout

append body
	.container
		if bin
			div.binTits
				div
					a(href='/ventures/#{bin.venture_id}')
						span.back(class="glyphicon glyphicon-chevron-left" aria-hidden="true") 
						span.back back to bins
				h1.binTitle #{bin.title}
				img.binUserImg(src='#{bin.image}')
				p User: #{bin.user_id}
		div
			.scrollDiv
				each item, index in kit 
					a(href='#{kit[index].url}')
						div.kitItem
							img.kitImg(src='#{kit[index].image}') 
							.kitText
								p #{kit[index].item} 
								p #{kit[index].price}
							br
			.kit
				a(href='#{bin.id}/kits/new')
					button.btn.btn-primary add an item
				a(href='#{bin.id}/edit') 
					button.btn.btn-primary edit bin
			div.binBottom
				p "#{bin.description}"
				hr
				p "#{bin.advice}"
			
				
			
